<%= simple_form_for @product do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.input :project_id,  as: :hidden %>
  <%= f.association :product_category, collection: ProductCategory.all, value_method: :_id, label_method: :label, include_blank: false  %> 
  <%= f.button :submit %>
<% end %>

<style>
textarea, input {
    max-height: 200px;
    width: 400px;
}
</style>
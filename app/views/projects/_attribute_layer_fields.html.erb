<fieldset>
	<%= f.label :label, "Attribute layer label" %>
	<%= f.text_field :label %>
	<%= f.label "Attributes"%>
	  	<%= f.collection_check_boxes :attribute_ids, Attribute.all, :id, :label do |b| 
	                     b.label { b.check_box + ' ' + b.text } 
	                     end  %>
    <%= f.simple_fields_for :attribute do |builder| %>
        <%= render 'attribute_fields', f: builder %>
    <% end %>
</fieldset>
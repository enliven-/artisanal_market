<fieldset>
	<%= f.label :label, "Palette label" %>
	<%= f.text_field :label %>
	<%= f.label "Attribute Layers"%>
	  	<%= f.collection_check_boxes :attribute_layer_ids, AttributeLayer.all, :id, :label do |b| 
	                     b.label { b.check_box + ' ' + b.text } 
	                     end  %>
    <%= f.simple_fields_for :attribute_layer do |builder| %>
        <%= render 'attribute_layer_fields', f: builder %>
    <% end %>
</fieldset>
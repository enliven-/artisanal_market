<%= simple_form_for @project, url_path: projects_path, html: { multipart: true } do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.file_field :img_file %><br><br>


<fieldset>
  <%= f.select :product_category_id, ProductCategory.all.map { |r| [r.label, r.id] }, include_blank: true  %><br>
  <%= link_to_add_fields "Add Category", f, :product_category %><br><br>
</fieldset>

<fieldset>
  <%= f.select :palette_id, Palette.all.map { |r| [r.label, r.id] }, include_blank: true  %><br>
  <%= link_to_add_fields "Create Palette", f, :palette %><br><br>
</fieldset>
  

<fieldset>
  <%= f.select :attribubte_layer_id, AttributeLayer.all.map { |r| [r.label, r.id] }, include_blank: true  %><br>
  <%= link_to_add_fields "Create Attribute Layer", f, :attribute_layer %><br><br>
</fieldset> 

<fieldset>
  <%= f.select :attribubte_id, Attribute.all.map { |r| [r.label, r.id] }, include_blank: true  %><br>
  <%= link_to_add_fields "Create Attribute Layer", f, :attribute %><br><br>
</fieldset> 

  
  <%= f.button :submit, "Create" %>
<% end %>

<style>
textarea, input {
    max-height: 200px;
    width: 400px;
}
</style>
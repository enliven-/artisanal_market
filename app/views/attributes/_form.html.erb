<%= simple_form_for(@attribute) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :label %>
    <%= f.input :attr_img %>
    <%= f.association :attribute_layer, collection: AttributeLayer.all, value_method: :_id, label_method: :label, include_blank: false  %> 
	
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

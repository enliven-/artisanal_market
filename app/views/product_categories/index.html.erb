<h3>Listing Product Categories for <%= current_user.name %> </h3>
 
<table class="projects-table">
  <tr>
    <th>Product Category Name</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @product_categories.each do |product_category| %>
  <tr>
    <td><%= product_category.label %></td>

    <td><%= link_to 'Show', product_category %></td>
    <td><%= link_to 'Edit', edit_product_category_path(product_category) %></td>
    <td><%= link_to 'Remove', product_category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'Create New Product Category', new_product_category_path %>




